<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    <!--忘记密码标头-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical">
        <EditText
            android:id="@+id/user_login_et_phone"
            android:paddingLeft="10dp"
            android:hint="手机号"
            android:textColorHint="@color/hint"
            android:textSize="15dp"
            style="@style/user_login"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/user_login_et_password"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:maxLines="16"
                android:minLines="6"
                android:textSize="15dp"
                android:background="@drawable/shape_dialog_background"
                android:textColorHint="@color/hint"
                android:textColor="@color/black"
                android:hint="密码"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="密码长度为6-16位"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <EditText
            android:id="@+id/user_login_et_password_confirmation"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:hint="确认密码"
            android:layout_marginTop="16dp"
            android:textSize="15dp"
            android:textColorHint="@color/hint"
            style="@style/user_login"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="300dp"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/user_login_et_verification_code"
                android:paddingLeft="10dp"
                android:hint="验证码"
                android:textSize="15dp"
                android:textColorHint="@color/hint"
                style="@style/user_login"/>
            <TextView
                android:id="@+id/user_login_tv_get_verification_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:textColor="@color/colorPrimary"
                android:inputType="number"
                android:text="发送验证码"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/user_login_tv_regist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_user_login_blue"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="45px"
            android:layout_marginTop="54dp"
            android:text="立即注册"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
