<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/personal_head_pic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="头像"
            android:textColor="@color/black"
            android:textSize="14dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/per_empphoto"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/to_right"/>
    </LinearLayout>

    <TextView
        style="@style/long_line"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:id="@+id/personal2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            style="@style/three_text"
            android:text="姓名"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/per_username"
            style="@style/personal_right_text"
            android:singleLine="true"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/to_right"/>
    </LinearLayout>

    <TextView
        style="@style/long_line"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            style="@style/three_text"
            android:text="手机号"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/per_phone"
            style="@style/personal_right_text"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/to_right"/>
    </LinearLayout>

    <TextView
        style="@style/long_line"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:id="@+id/personal_gender"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            style="@style/three_text"
            android:text="性别"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/per_empsex"
            style="@style/personal_right_text"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/to_right"/>
    </LinearLayout>

    <TextView
        style="@style/long_line"
        android:layout_marginLeft="20px"/>

    <LinearLayout
        android:id="@+id/birthday"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            style="@style/three_text"
            android:text="生日"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/per_empbirthday"
            android:background="@null"
            android:textSize="14dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            style="@style/personal_right_text"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/to_right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_gravity="center"
            style="@style/three_text"
            android:text="地址"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_gravity="center">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:id="@+id/per_empaddress"
            android:layout_width="150dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ems="20"

            />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/to_right"/>
            </LinearLayout>
    </LinearLayout>

</LinearLayout>
