<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/rectangle_up_down">

    <TextView
        android:id="@+id/leave_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="地点："/>
    <TextView
        android:id="@+id/leave_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/leave_address_tv"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/visit_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/leave_address"
        android:text="姓名："/>
    <TextView
        android:id="@+id/visit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/visit_name_tv"
        android:layout_below="@+id/leave_address"/>

    <TextView
        android:id="@+id/visit_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visit_name"
        android:text="时间："
        android:layout_marginTop="5dp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/visit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visit_name"
        android:layout_toRightOf="@+id/visit_time_tv"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"/>


    <ImageView
        android:id="@+id/leave_rigth"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@mipmap/to_right"
        android:layout_below="@+id/leave_address"
        android:layout_alignBottom="@+id/examine"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"/>
</RelativeLayout>