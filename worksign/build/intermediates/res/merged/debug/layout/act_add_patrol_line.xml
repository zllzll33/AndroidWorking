<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/rectangle_up_down"
        android:paddingLeft="13dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路线名称"
            android:textColor="@color/black"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/add_line_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="巡检地点"
            android:textSize="15dp"
            android:textColorHint="@color/hint"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/rectangle_up_down"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/add_branch_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="紧急联系人"
                android:textColor="@color/black"
                android:textSize="15dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="0px"
                android:layout_weight="1"
                android:id="@+id/contacts"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text=""
              />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="13dp"
                android:src="@mipmap/to_right"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/rectangle_up_down"
        android:paddingLeft="13dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间"
            android:textColor="@color/black"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/time_begin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="15dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="请选择开始时间(必填)"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/rectangle_up_down"
        android:paddingLeft="13dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"
            android:textColor="@color/black"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/time_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="15dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColorHint="@color/hint"
            android:hint="请选择结束时间(必填)"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:id="@+id/ll_patrol_set"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/patrol_place"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="设置巡检点"
            android:textSize="17sp"
            android:background="@drawable/shape_stroke"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/patrol_people"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="巡检人员"
            android:textSize="17sp"
            android:background="@drawable/shape_solid"/>
        </LinearLayout>
</LinearLayout>