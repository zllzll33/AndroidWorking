<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/rectangle_up_down">
    <TextView
        android:id="@+id/examine_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="请假信息1"/>
    <TextView
        android:id="@+id/examine_adopt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_below="@+id/examine_message"
        android:layout_marginTop="5dp"
        android:text="审批通过"/>
      <TextView
          android:id="@+id/examine_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="2016-06-01 12:00"
          android:textColor="@color/black"
          android:layout_marginTop="5dp"
          android:layout_below="@+id/examine_adopt"
          android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/examine_rigth"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/examine_message"
        android:layout_marginTop="5dp"
        android:background="@mipmap/to_right"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>