<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_up_down"
                android:padding="10dp">

    <LinearLayout
        android:id="@+id/message_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假类型："
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/leave_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wr"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="请假天数："
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/leave_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leave_examine_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_ll"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态："
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/leave_examine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待审批"
            android:textColor="@color/red"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leave_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/leave_examine_ll"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="开始时间："/>
        <TextView
            android:id="@+id/leave_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-06-01 12:00"
            android:textColor="@color/black"
            android:textSize="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/leave_ll1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="结束时间："/>
        <TextView
            android:id="@+id/leave_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-06-01 12:00"
            android:textColor="@color/black"
            android:textSize="12dp"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/leave_rigth"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/to_right"/>

    <TextView
        android:id="@+id/cancle_tv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/leave_rigth"
        android:background="@drawable/round_solid"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="撤回"
        android:textColor="@color/white"/>
</RelativeLayout>