<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:gravity="center_vertical"
                                     android:padding="10dp"
                                     android:layout_marginTop="10dp"
                                     android:background="@drawable/rectangle_up_down"
                                     android:orientation="horizontal">
    <ImageView
        android:id="@+id/system_left_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/round_point"/>

    <TextView
        android:id="@+id/system_left_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="15px"
        android:textColor="@color/black"
        android:text="请假"/>

    <TextView
        android:id="@+id/system_right_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-6-11"/>


    <ImageView
        android:id="@+id/system_right_pic"
        android:layout_width="40px"
        android:layout_height="40px"
        android:src="@mipmap/to_right"/>

</com.zhy.autolayout.AutoLinearLayout>