<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_blue_confirm"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_choice"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="70dp"
            android:background="@mipmap/left_choice"/>
        <TextView
            android:id="@+id/att_area_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2016年6月"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/right_choice"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="70dp"
            android:background="@mipmap/right_choice"/>
    </LinearLayout>
    <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
        android:id="@+id/att_area_rlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
