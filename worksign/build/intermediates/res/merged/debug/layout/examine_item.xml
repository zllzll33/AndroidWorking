<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/rectangle_up_down">
    <TextView
        android:id="@+id/leave_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="请假信息1"/>

    <TextView
        android:id="@+id/examine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_below="@+id/leave_message"
        android:layout_marginTop="5dp"
        android:text="待审批"/>

      <TextView
          android:id="@+id/leave_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/examine"
          android:textSize="12dp"
          android:text="2016-06-01 12:00"
          android:layout_marginTop="5dp"
          android:textColor="@color/black" />
    <ImageView
        android:id="@+id/leave_rigth"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@mipmap/to_right"
        android:layout_alignBottom="@+id/examine"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/cancle_tv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/leave_rigth"
        android:layout_marginTop="10dp"
        android:text="撤回"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/round_solid"/>
</RelativeLayout>