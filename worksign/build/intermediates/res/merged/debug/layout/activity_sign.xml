<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="50dp"
        android:text="请选择自己习惯的打卡方式"/>
   <!--三个圆-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/round_nfc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/round"/>
                <ImageView
                    android:id="@+id/sign_right1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="7dp"
                    android:visibility="gone"
                    android:src="@mipmap/right"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="NFC"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/round_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/round"/>
                <ImageView
                    android:id="@+id/sign_right2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="7dp"
                    android:visibility="gone"
                    android:src="@mipmap/right"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="蓝牙"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/round_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/round"/>
                <ImageView
                    android:id="@+id/sign_right3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="13px"
                    android:visibility="gone"
                    android:src="@mipmap/right"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="GPS"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/sign_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="17dp"
        android:text="确定"
        android:background="@drawable/shape_user_login_blue"/>
</LinearLayout>
