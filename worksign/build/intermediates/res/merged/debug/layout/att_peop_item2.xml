<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:background="@drawable/rectangle_up_down"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <CheckBox
        android:id="@+id/att_peop_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/att_peop_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:text="wqrwrwq"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/att_peop_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginRight="5dp"
        android:text="sdf"/>
    <TextView
        android:id="@+id/att_peop_add"
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:textSize="10dp"
        android:gravity="center"
        android:text="添加"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_rounded_white_rectangle"/>
</LinearLayout>